# Supabase Configuration
# Get these values from your Supabase Dashboard -> Settings -> API

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Alternative environment variable names (for Next.js compatibility)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Application Configuration
NODE_ENV=development
PORT=3000

# Migration Configuration (Optional)
# These override the defaults in migration/config.js

# Batch processing
MIGRATION_BATCH_SIZE=500
MIGRATION_MAX_RETRIES=3
MIGRATION_RETRY_DELAY=1000

# Performance
MIGRATION_STATEMENT_TIMEOUT=600000
MIGRATION_MAX_CONNECTIONS=10

# Features
MIGRATION_ENABLE_BACKUP=true
MIGRATION_ENABLE_PROGRESS_TRACKING=true
MIGRATION_ENABLE_TRANSACTIONS=true

# Paths
MIGRATION_DATA_DIRECTORY=./data
MIGRATION_BACKUP_DIRECTORY=./backups

# Database optimization
MIGRATION_DISABLE_TRIGGERS_ON_IMPORT=true
MIGRATION_REBUILD_INDEXES_AFTER_IMPORT=true